<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:id="@+id/tv_title_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Đăng Nhập"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edt_user"/>

    <EditText
        android:id="@+id/edt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="user"
        android:textSize="18sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_admin"
        android:layout_margin="20dp"
        android:background="#F4EEEE"/>
    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pass"
        android:textSize="18sp"
        android:padding="20dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edt_user"
        android:layout_margin="20dp"
        android:background="#F4EEEE"/>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký??"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        app:layout_constraintEnd_toEndOf="@id/edt_pass"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>