<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resignter">
    <EditText
        android:id="@+id/edt_user_resignter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="user"
        android:textSize="18sp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:background="#F4EEEE"/>
    <EditText
        android:id="@+id/edt_phone_resignter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:textSize="18sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_user_resignter"
        android:layout_margin="20dp"
        android:background="#F4EEEE"/>
    <EditText
        android:id="@+id/edt_pass_resignter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pass"
        android:textSize="18sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_resignter"
        android:layout_margin="20dp"
        android:background="#F4EEEE"/>
    <Button
        android:id="@+id/btn_resignter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass_resignter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>