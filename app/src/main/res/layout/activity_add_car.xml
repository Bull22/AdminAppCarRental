<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCarActivity">
    <TextView
        android:id="@+id/tv_add_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:text="ThÃªm xe"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_car_mini"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_car_mini"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toLeftOf="@id/img_bus"
        app:layout_constraintBottom_toTopOf="@id/img_pick_up_truck"
        app:layout_constraintTop_toBottomOf="@id/tv_add_car"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/img_bus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_xe_khach"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_car"
        app:layout_constraintLeft_toRightOf="@id/img_car_mini"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/img_pick_up_truck"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pick_up_truck"
        app:layout_constraintTop_toBottomOf="@id/img_car_mini"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_truck"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/img_truck"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_truck_icon"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_bus"
        app:layout_constraintLeft_toRightOf="@id/img_pick_up_truck"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>